<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="WarringDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/dialog_warring_bg</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="WaitingDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/dialog_waiting_bg</item>
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>
